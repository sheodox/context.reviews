extends layout

block content
  style.
    body, html {
      color: white;
      font-family: "Source Han Sans", "源ノ角ゴシック", "Hiragino Sans", "HiraKakuProN-W3", "Hiragino Kaku Gothic ProN W3", "Hiragino Kaku Gothic ProN", "ヒラギノ角ゴ ProN W3", "Noto Sans", "Noto Sans CJK JP", "メイリオ", Meiryo, "游ゴシック", YuGothic, "ＭＳ Ｐゴシック", "MS PGothic", "ＭＳ ゴシック", "MS Gothic", sans-serif;
      opacity: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
      text-align: center;
    }
    a {
      color: #00b7ff;
    }
    .error {
      padding: 1rem;
      background: #14171e;
      display: flex;
      flex-direction: column;
      align-items: center;
      border-radius: 0.3rem;
    }
    img {
      width: 5rem;
      height: 5rem;
    }
    p {
      max-width: 20rem;
    }

  .error
    img(alt="logo", src="/favicon.webp")
    h1 Context.Reviews
    h2= message
    p= description
    a(href='/') Home
