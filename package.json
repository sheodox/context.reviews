{
  "name": "context.reviews",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node src/app",
    "dev": "nodemon ./bin/www --ignore data/",
    "build": "npm run build-web:prod && npm run build-server:prod",
    "build-server:dev": "tsc --watch",
    "build-server:prod": "tsc",
    "build-web:dev": "webpack --mode development --watch --env.SITE_TARGET=dev --config-name website",
    "build-web:prod": "webpack --mode production --env.SITE_TARGET=prod --config-name website",
    "build-extension:dev": "webpack --mode development --config-name extension --watch --env.SITE_TARGET=dev",
    "build-extension:prod": "webpack --mode development --config-name extension --env.SITE_TARGET=prod",
    "extension:package": "npm run build-extension:prod && web-ext build --source-dir ./extension -o",
    "deploy": "npm stop && git pull && npm i && npm run build && npm start"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-redis": "^4.0.4",
    "cookie": "^0.4.1",
    "cookie-parser": "~1.4.3",
    "copy-webpack-plugin": "^6.0.0",
    "css-loader": "^3.4.2",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.0",
    "express-session": "^1.17.1",
    "file-loader": "^5.0.2",
    "handlebars": "^4.7.6",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "node-sass": "^4.14.1",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "pg": "^8.2.1",
    "pug": "^2.0.4",
    "redis": "^3.0.2",
    "sass-loader": "^8.0.2",
    "serialize-javascript": "^3.1.0",
    "sharp": "^0.25.4",
    "style-loader": "^1.1.3",
    "svelte": "^3.22.3",
    "svelte-loader": "^2.13.6",
    "typescript": "^3.9.7",
    "vue": "^2.6.11",
    "web-ext": "^5.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-manifest-plugin": "^2.2.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "@types/passport": "^1.0.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/pg": "^7.14.4",
    "@types/redis": "^2.8.25",
    "@types/serialize-javascript": "^4.0.0",
    "@types/ws": "^7.2.6",
    "nodemon": "^2.0.4"
  }
}
