{
  "name": "japanese-review-sentences",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node app",
    "dev": "nodemon ./bin/www --ignore data/",
    "build": "webpack --mode production --env.SITE_TARGET=prod",
    "build:dev": "webpack --mode development --watch --env.SITE_TARGET=dev",
    "build-extension:dev": "webpack --mode development --config-name extension --watch --env.SITE_TARGET=dev",
    "build-extension:prod": "webpack --mode development --config-name extension --env.SITE_TARGET=prod",
    "extension:package": "npm run build-extension:prod && web-ext build --source-dir ./extension -o",
    "deploy": "npm stop && git pull && npm i && npm run build && npm start"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.2",
    "connect-redis": "^4.0.4",
    "cookie-parser": "~1.4.3",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.0",
    "express-session": "^1.17.1",
    "file-loader": "^5.0.2",
    "handlebars": "^4.7.6",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "node-sass": "^4.14.1",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "pg": "^8.2.1",
    "pug": "^2.0.4",
    "redis": "^3.0.2",
    "sass-loader": "^8.0.2",
    "serialize-javascript": "^3.1.0",
    "sharp": "^0.25.4",
    "socket.io": "^2.1.1",
    "style-loader": "^1.1.3",
    "svelte": "^3.22.3",
    "svelte-loader": "^2.13.6",
    "vue": "^2.6.11",
    "web-ext": "^5.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
